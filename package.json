{
  "name": "frugal-router",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start:dev": "nodemon",
    "build:dev": "tsc --watch --preserveWatchOutput",
    "dev": "concurrently \"yarn build:dev\" \"yarn start:dev\""
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register ./src/index.ts",
    "ext": "ts, js"
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "jade": "~1.11.0",
    "morgan": "~1.9.1",
    "nodemon": "^2.0.2",
    "reflect-metadata": "^0.1.13",
    "typescript": "^3.7.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/morgan": "^1.7.37",
    "concurrently": "^5.1.0",
    "prettier": "1.19.1",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0"
  }
}
